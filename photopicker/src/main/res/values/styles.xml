<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/pickerColorDarkOverlay</item>
    </style>


    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_state_list_background</item>
        <item name="android:textColor">@color/chip_state_list_text</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_state_list_border</item>
    </style>
</resources>
